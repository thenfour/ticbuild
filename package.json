{
  "name": "ticbuild",
  "version": "1.0.6",
  "description": "A build & watch system for TIC-80",
  "main": "dist/index.js",
  "bin": {
    "ticbuild": "dist/index.js"
  },
  "scripts": {
    "prepare": "cross-env NODE_ENV=production npm run build",
    "prebuild": "node scripts/gen-build-info.js",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "tic80",
    "build",
    "watch",
    "cli"
  ],
  "author": "Carl Corcoran",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thenfour/ticbuild.git"
  },
  "license": "ISC",
  "files": [
    ".attachments/",
    "dist/",
    "templates/",
    "README.md",
    "LICENSE",
    "ticbuild.schema.json"
  ],
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/luaparse": "^0.2.13",
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^11.0.0",
    "dotenv": "^16.0.0",
    "jsonc-parser": "^3.2.0",
    "luaparse": "^0.3.1"
  }
}